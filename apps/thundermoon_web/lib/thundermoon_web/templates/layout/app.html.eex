<%= render_layout ThundermoonWeb.PageView, "text_section.html", conn: @conn do %>
  <%= if get_flash(@conn, :info) do %>
    <p class="rounded bg-blue-400 text-blue-900 py-3 px-4" role="alert"><%= get_flash(@conn, :info) %></p>
  <% end %>
  <%= if get_flash(@conn, :error) do %>
    <p class="rounded bg-red-300 text-red-900 py-3 px-4" role="alert"><%= get_flash(@conn, :error) %></p>
  <% end %>
<% end %>
<%= @inner_content %>
